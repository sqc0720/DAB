<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radio_pic_bg"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textview_dabtab"
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:text="DAB "
        android:textSize="32sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/button_main_setting"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/main_setting_selector"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"/>

    <fragment
        android:id="@+id/fragment_dab_tab"
        android:name="com.datong.radiodab.DabTabFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>