<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dab_frame_nosignal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        tools:ignore="ContentDescription"
        android:id="@+id/dab_imageview_nosignal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/dab_no_signal"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/dab_textview_nosignal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dab_string_no_signal"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dab_imageview_nosignal"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintHeight_percent="0.15"/>

</androidx.constraintlayout.widget.ConstraintLayout>