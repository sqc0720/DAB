<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dab_category_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/dab_textview_category_title"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginTop="29dp"
        android:layout_marginStart="418dp"
        android:text="Select a category"
        android:textColor="@color/dab_category_text"
        android:textSize="36sp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <android.widget.Button
        android:id="@+id/dab_imagebutton_category_close"
        android:layout_width="132dp"
        android:layout_height="60dp"
        android:textAllCaps="false"
        android:text="Cancel"
        android:textColor="@color/dab_category_text"
        android:textSize="28sp"
        android:background="@null"
        android:layout_marginTop="23dp"
        android:layout_marginStart="931dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <RadioGroup
        android:id="@+id/dab_categorydialog_group"
        android:layout_width="1110dp"
        android:layout_height="348dp"
        android:orientation="vertical"
        android:layout_marginTop="151dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <RadioButton
            android:id="@+id/dab_categorydialog_all"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/dab_category_shape"
            android:gravity="center"
            android:button="@null"
            android:textSize="32sp"
            android:text="All"
            android:textColor="@color/dab_category_type_text_unchecked"/>
        <RadioButton
            android:id="@+id/dab_categorydialog_news"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_marginStart="400dp"
            android:layout_marginTop="-110dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/dab_category_shape"
            android:gravity="center"
            android:button="@null"
            android:textSize="32sp"
            android:text="News"
            android:textColor="@color/dab_category_type_text_unchecked"/>
        <RadioButton
            android:id="@+id/dab_categorydialog_talk"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_marginStart="740dp"
            android:layout_marginTop="-110dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/dab_category_shape"
            android:gravity="center"
            android:button="@null"
            android:textSize="32sp"
            android:text="Talk"
            android:textColor="@color/dab_category_type_text_unchecked"/>
        <RadioButton
            android:id="@+id/dab_categorydialog_sports"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/dab_category_shape"
            android:gravity="center"
            android:button="@null"
            android:textSize="32sp"
            android:text="Sports"
            android:textColor="@color/dab_category_type_text_unchecked"/>
        <RadioButton
            android:id="@+id/dab_categorydialog_popular"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_marginStart="400dp"
            android:layout_marginTop="-110dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/dab_category_shape"
            android:gravity="center"
            android:button="@null"
            android:textSize="32sp"
            android:text="Popular"
            android:textColor="@color/dab_category_type_text_unchecked"/>
        <RadioButton
            android:id="@+id/dab_categorydialog_classic"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_marginStart="740dp"
            android:layout_marginTop="-110dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/dab_category_shape"
            android:gravity="center"
            android:button="@null"
            android:textSize="32sp"
            android:text="Classic"
            android:textColor="@color/dab_category_type_text_unchecked"/>
        <RadioButton
            android:id="@+id/dab_categorydialog_nopty"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/dab_category_shape"
            android:gravity="center"
            android:button="@null"
            android:textSize="32sp"
            android:text="NO PTY"
            android:textColor="@color/dab_category_type_text_unchecked"/>
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>